{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "**/.eslintrc.json",
    "**/.prettierrc.json",
    "**/tsconfig.json"
  ],
  "pipeline": {
	"lint": {},
	"dev": {
		"cache": false,
		"persistent": true
	},
    "build": {
      "dependsOn": ["^build"],
	  "outputs": ["dist/**/*"]
    }
  }
}
